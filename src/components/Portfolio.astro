---
const { projects } = await import("../data/projects");
---

<section id="proyectos" class="section">
  <div class="container">
    <span class="section-subtitle">Casos de Ã‰xito</span>
    <h2 class="section-title">
      Portafolio de <span style="color: var(--primary);">Proyectos</span>
    </h2>

    <div class="grid grid-2">
      {
        projects.map((project) => (
          <a href={`/proyectos/${project.id}`} class="project-card">
            <div class="project-image">
              <img src={project.image} alt={project.title} />
              <div class="overlay">
                <div class="content">
                  <div class="tags">
                    {project.tags.map((tag) => (
                      <span class="tag">{tag}</span>
                    ))}
                  </div>
                  <h3>{project.title}</h3>
                  <p>{project.description}</p>
                </div>
              </div>
            </div>
          </a>
        ))
      }
    </div>
  </div>
</section>

<style>
  .project-card {
    position: relative;
    overflow: hidden;
    height: 350px;
    cursor: pointer;
  }

  .project-image {
    width: 100%;
    height: 100%;
    position: relative;
  }

  .project-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.6s ease;
  }

  .project-card:hover img {
    transform: scale(1.1);
  }

  .overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(to top, rgba(0, 0, 0, 0.9), transparent);
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    padding: 2rem;
    opacity: 0.9;
    transition: opacity 0.3s;
  }

  .content {
    transform: translateY(10px);
    transition: transform 0.3s;
  }

  .project-card:hover .content {
    transform: translateY(0);
  }

  .tags {
    margin-bottom: 0.5rem;
  }

  .tag {
    background: var(--primary);
    color: white;
    padding: 3px 10px;
    font-size: 0.7rem;
    text-transform: uppercase;
    font-weight: 700;
    margin-right: 5px;
    display: inline-block;
  }

  h3 {
    margin-bottom: 0.5rem;
    color: white;
  }

  p {
    margin-bottom: 0;
    font-size: 0.9rem;
    color: #eee;
  }
</style>
